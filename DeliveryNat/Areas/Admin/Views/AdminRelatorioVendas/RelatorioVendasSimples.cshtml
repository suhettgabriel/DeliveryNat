@model IEnumerable<DeliveryNat.Models.Pedido>

<div style="padding-bottom:15px" class="row">
    <h1><i class="fa fa-calendar"></i>&nbsp;Pedidos Por Período</h1>
</div>
<hr />

<nav class="navbar navbar-dark">
    <div class="container-fluid">
        <form class="navbar-form navbar-left">
            <div class="row form-group">
                <div class="form-group col-sm-4 col-md-4 col-lg-4">
                    <label for="minDate">Data Inicial</label>
                    <input type="date" class="form-control" name="minDate" value=@ViewData["minDate"] />
                </div>
                <div class="form-group col-sm-4 col-md-4 col-lg-4">
                    <label for="maxDate">Data Final</label>
                    <input type="date" class="form-control" name="maxDate" value=@ViewData["maxDate"] />
                </div>
                <div style="padding-top: 24px" class="form-group col-sm-4 col-md-4 col-lg-4">
                    <button type="submit" class="btn btn-success"><i class="fa fa-filter"></i>   Filtrar</button>
                </div>
            </div>

        </form>
    </div>
</nav>
<hr />
<div class="panel panel-primary">
    <div class="panel-heading">
        <h6 class="panel-title"><i class="fa fa-layer-group"></i>   Total de Pedidos: @Model.Count()</h6>
        <h6 class="panel-title"> <i class="fa fa-note-sticky"></i>  Total de Produtos nos Pedidos: @Model.Sum(obj => obj.TotalItensPedido).ToString()</h6>
        <h6 class="panel-title"><i class="fa fa-circle-dollar-to-slot"></i>  Valor Total dos Pedidos:  @Model.Sum(obj => obj.PedidoTotal).ToString("c")</h6>
    </div>
    <div class="panel-body">
        <table class="table table-striped table-hover">
            <thead>
                <tr class="success">
                    <th>
                        @Html.DisplayNameFor(model => model.PedidoId)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Nome)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Email)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Telefone)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.PedidoTotal)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.TotalItensPedido)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.PedidoEntregueEm)
                    </th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>
                            @Html.DisplayFor(modelItem => item.PedidoId)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Nome)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Email)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Telefone)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.PedidoTotal)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.TotalItensPedido)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.PedidoEntregueEm)
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>