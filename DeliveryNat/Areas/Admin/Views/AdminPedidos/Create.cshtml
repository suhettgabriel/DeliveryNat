@model DeliveryNat.Models.Pedido

@{
    ViewData["Title"] = "Create";
}

<h1>Criar Pedidos</h1>

@*<h4>Pedido</h4>*@
<hr />
<div class="row">
    <div class="col-md-12">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="row">
                <div class="form-group col-6">
                    <label asp-for="Nome" class="control-label"></label>
                    <input asp-for="Nome" class="form-control" />
                    <span asp-validation-for="Nome" class="text-danger"></span>
                </div>
                <div class="form-group col-6">
                    <label asp-for="Sobrenome" class="control-label"></label>
                    <input asp-for="Sobrenome" class="form-control" />
                    <span asp-validation-for="Sobrenome" class="text-danger"></span>
                </div>
            </div>
            <div class="row">
                <div class="form-group col-8">
                    <label asp-for="Endereco1" class="control-label"></label>
                    <input asp-for="Endereco1" class="form-control" />
                    <span asp-validation-for="Endereco1" class="text-danger"></span>
                </div>
                <div class="form-group col-4">
                    <label asp-for="Endereco2" class="control-label"></label>
                    <input asp-for="Endereco2" class="form-control" />
                    <span asp-validation-for="Endereco2" class="text-danger"></span>
                </div>
            </div>
            <div class="row">
                <div class="form-group col-4">
                    <label asp-for="Cep" class="control-label"></label>
                    <input asp-for="Cep" class="form-control" />
                    <span asp-validation-for="Cep" class="text-danger"></span>
                </div>
                <div class="form-group col-4">
                    <label asp-for="Estado" class="control-label"></label>
                    <input asp-for="Estado" class="form-control" />
                    <span asp-validation-for="Estado" class="text-danger"></span>
                </div>
                <div class="form-group col-4">
                    <label asp-for="Cidade" class="control-label"></label>
                    <input asp-for="Cidade" class="form-control" />
                    <span asp-validation-for="Cidade" class="text-danger"></span>
                </div>
            </div>
            <div class="row">
                <div class="form-group col-5">
                    <label asp-for="Telefone" class="control-label"></label>
                    <input asp-for="Telefone" class="form-control" />
                    <span asp-validation-for="Telefone" class="text-danger"></span>
                </div>
                <div class="form-group col-7">
                    <label asp-for="Email" class="control-label"></label>
                    <input asp-for="Email" class="form-control" />
                    <span asp-validation-for="Email" class="text-danger"></span>
                </div>
            </div>
            <div class="row">
                <div class="form-group col-4">
                    <label asp-for="PedidoEnviado" class="control-label"></label>
                    <input asp-for="PedidoEnviado" class="form-control" />
                    <span asp-validation-for="PedidoEnviado" class="text-danger"></span>
                </div>
                <div class="form-group col-4">
                    <label asp-for="PedidoEntregueEm" class="control-label"></label>
                    <input asp-for="PedidoEntregueEm" class="form-control" />
                    <span asp-validation-for="PedidoEntregueEm" class="text-danger"></span>
                </div>
            </div>
            <div style="padding-top:20px" class="row">
                <div class="form-group col-2">
                    <input style="background-color: green;" type="submit" value="Adicionar" class="btn btn-primary" />
                </div>
                <div class="col-4" >
                    <a class="btn btn-primary" asp-action="Index"><i class="fa fa-circle-arrow-left"></i>  Voltar</a>
                </div>
            </div>
        </form>
    </div>
</div>


