@model ReflectionIT.Mvc.Paging.PagingList<DeliveryNat.Models.Produto>

@{
    ViewData["Title"] = "Index";
}



<div style="padding-bottom:15px" class="row">
    <h1>Produtos</h1>
</div>
<form method="get" class="form-inline">
    <div class="container">
        <div class="row">
            <div class="col">
                <input name="filter" class="form-control" placeholder="filtro"
                       value="@Model.RouteValue["Filter"]" />
            </div>
            <div class="col">
                <button type="submit" class="btn btn-info"><i class="fa fa-magnifying-glass"></i>  Procurar</button>
            </div>
        </div>
    </div>
</form>

<p style="padding-top:15px">
    <a class="btn btn-primary" asp-action="Create"><i class="fa fa-plus-circle"></i> Novo Produto</a>
</p>
<table class="table table-hover">
    <thead class="thead-light">
        <tr>
            <th scope="col">
                @Html.DisplayNameFor(model => model.Nome)
            </th>
            <th scope="col">
                @Html.DisplayNameFor(model => model.DescricaoCurta)
            </th>
            <th scope="col">
                @Html.DisplayNameFor(model => model.Preco)
            </th>
            <th scope="col">
                @Html.DisplayNameFor(model => model.IsProdutoPreferido)
            </th>
            <th scope="col">
                @Html.DisplayNameFor(model => model.EmEstoque)
            </th>
            <th scope="col">
                @Html.DisplayNameFor(model => model.Categoria)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td scope="row">
                    @Html.DisplayFor(modelItem => item.Nome)
                </td>
                <td scope="row">
                    @Html.DisplayFor(modelItem => item.DescricaoCurta)
                </td>
                <td scope="row">
                    @Html.DisplayFor(modelItem => item.Preco)
                </td>
                <td scope="row">
                    @Html.DisplayFor(modelItem => item.IsProdutoPreferido)
                </td>
                <td scope="row">
                    @Html.DisplayFor(modelItem => item.EmEstoque)
                </td>
                <td scope="row">
                    @Html.DisplayFor(modelItem => item.Categoria.CategoriaNome)
                </td>
                <td scope="row">
                    <a title="Editar Produto" asp-action="Edit" asp-route-id="@item.ProdutoId"><i class="fa fa-edit"></i></a>
                    <a title="Detalhes do Produto" asp-action="Details" asp-route-id="@item.ProdutoId"><i class="fa fa-search"></i></a>
                    <a title="Exluir Produto" asp-action="Delete" asp-route-id="@item.ProdutoId"><i class="fa fa-trash"></i></a>
                </td>
            </tr>
        }
    </tbody>
</table>
Total de Lanches : @Model.TotalRecordCount
<div>
    <vc:pager paging-list="@Model"></vc:pager>
</div>
