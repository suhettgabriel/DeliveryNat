@model DeliveryNat.Models.Produto

@{
    ViewData["Title"] = "Details";
}
<div style="padding-bottom:25px" class="row">
    <h1><i style="color: darkslategrey" class="fa fa-circle-info"></i>&nbsp;Detalhes do Produto</h1>
</div>
<div>
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Nome):
        </dt>
        <dd style="background-color:#FFFACD" class="col-sm-10">
            @Html.DisplayFor(model => model.Nome)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.DescricaoCurta)
        </dt>
        <dd style="background-color:#FFFACD" class="col-sm-10">
            @Html.DisplayFor(model => model.DescricaoCurta)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.DescricaoDetalhada):
        </dt>
        <dd style="background-color:#FFFACD" class="col-sm-10">
            @Html.DisplayFor(model => model.DescricaoDetalhada)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Preco):
        </dt>
        <dd style="background-color:#FFFACD" class="col-sm-10">
            @Html.DisplayFor(model => model.Preco)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.ImagemUrl):
        </dt>
        <dd style="background-color:#FFFACD" class="col-sm-10">
            @Html.DisplayFor(model => model.ImagemUrl)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.ImagemThumbnailUrl):
        </dt>
        <dd style="background-color:#FFFACD" class="col-sm-10">
            @Html.DisplayFor(model => model.ImagemThumbnailUrl)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.IsProdutoPreferido)
        </dt>
        <dd style="background-color:#FFFACD" class="col-sm-10">
            @Html.DisplayFor(model => model.IsProdutoPreferido)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.EmEstoque)?
        </dt>
        <dd style="background-color:#FFFACD" class="col-sm-10">
            @Html.DisplayFor(model => model.EmEstoque)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Categoria):
        </dt>
        <dd style="background-color:#FFFACD" class="col-sm-10">
            @Html.DisplayFor(model => model.Categoria.CategoriaNome)
        </dd>
    </dl>
</div>
<div style="padding-top:20px">
    <a style="background-color: green;" class="btn btn-primary" asp-action="Edit" asp-route-id="@Model?.ProdutoId"><i class="fa fa-edit"></i> Editar</a>
    <a class="btn btn-primary" asp-action="Index"><i class="fa fa-circle-arrow-left"></i> Voltar</a>
</div>
