@{
    ViewData["Title"] = "UploadaFiles";
}
<div class="col-sm">
    <i style="width: 100px; height:100px" class="fa fa-cloud-arrow-up"></i>
</div>
<hr />
<div class="jumbotron jumbotron-fluid">
    <div class="container">
        @if (ViewData["Erro"] != null)
        {
            <div>
                <i style="width: 100px; height:100px" class="fa-regular fa-file-excel"></i>
            </div>
            @*<img src="~/images/erro1.png" width="150" height="150" />*@
            <h4>@ViewData["Erro"]</h4>
        }
    </div>
    <div class="container">
        @if (ViewData["Resultado"] != null)
        {
            <h4>@ViewData["Resultado"]</h4>
            <hr />
            @if (ViewBag.Arquivos != null)
            {
                @foreach (string arquivo in ViewBag.Arquivos)
                {
                    <li>
                        @arquivo
                    </li>
                }
            }
        }
    </div>
</div>
<div class="form-group">
    <a class="btn btn-outline-info" asp-controller="AdminImagens" asp-action="GetImagens">Exibir Imagens</a>
</div>
