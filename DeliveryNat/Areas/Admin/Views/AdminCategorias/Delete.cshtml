@model DeliveryNat.Models.Categoria

@{
    ViewData["Title"] = "Delete";
}

<h1>Excluir Categoria</h1>

<h3>Você tem certeza que deseja excluir o item?</h3>
<div>
    <h4>Categoria</h4>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.CategoriaNome)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.CategoriaNome)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Descricao)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Descricao)
        </dd>
    </dl>
    
    <form asp-action="Delete">
        <input type="hidden" asp-for="CategoriaId" />
        <input type="submit" value="Excluir" class="btn btn-danger" /> 
        <a class="btn btn-primary" asp-action="Index"> <i class="fa fa-circle-arrow-left"></i> Voltar</a>
    </form>
</div>
