@model DeliveryNat.Models.Categoria

@{
    ViewData["Title"] = "Delete";
}
<div style="padding-bottom:25px" class="row">
    <h1><i style="color: darkslategrey" class="fa fa-eraser"></i>&nbsp;Excluir Categoria</h1>
</div>

<h3>Você tem certeza que deseja excluir a categoria?</h3>
<br />
<div>
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.CategoriaNome)
        </dt>
        <dd style="background-color:#FFFACD" class="col-sm-10">
            @Html.DisplayFor(model => model.CategoriaNome)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Descricao)
        </dt>
        <dd style="background-color:#FFFACD" class="col-sm-10">
            @Html.DisplayFor(model => model.Descricao)
        </dd>
    </dl>

    <form asp-action="Delete">
        <input type="hidden" asp-for="CategoriaId" />
        <input type="submit" value="Excluir" class="btn btn-danger" />
        <a class="btn btn-primary" asp-action="Index"> <i class="fa fa-circle-arrow-left"></i> Voltar</a>
    </form>
</div>
