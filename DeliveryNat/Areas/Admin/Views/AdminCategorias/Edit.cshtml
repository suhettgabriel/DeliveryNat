@model DeliveryNat.Models.Categoria

@{
    ViewData["Title"] = "Edit";
}
<div style="padding-bottom:25px" class="row">
    <h1><i style="color: darkslategrey" class="fa-regular fa-pen-to-square"></i>&nbsp;Editar Categoria</h1>
</div>
<form asp-action="Edit">
    <div class="row">
        <div class="form-group col-4">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="CategoriaId" />
            <label asp-for="CategoriaNome" class="control-label"></label>
            <input asp-for="CategoriaNome" class="form-control" />
            <span asp-validation-for="CategoriaNome" class="text-danger"></span>
        </div>
        <div class="form-group col-7">
            <label asp-for="Descricao" class="control-label"></label>
            <input asp-for="Descricao" class="form-control" />
            <span asp-validation-for="Descricao" class="text-danger"></span>
        </div>
    </div>
    <div class="form-group" style="padding-top:40px">
    <input style="background-color: green;" type="submit" value="Salvar" class="btn btn-primary" />
    <a class="btn btn-primary" asp-action="Index"><i class="fa fa-circle-arrow-left"></i>  Voltar</a>
</div>
</form>





