@model IEnumerable<DeliveryNat.Models.Categoria>

@{
    ViewData["Title"] = "Index";
}

<h1>Categoria</h1>

<p>
    <a class="btn btn-primary" asp-action="Create"><i class="fa fa-plus-circle"></i> Nova Categoria</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.CategoriaNome)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Descricao)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.CategoriaNome)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Descricao)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.CategoriaId"><i class="fa fa-edit"></i></a> |
                <a asp-action="Details" asp-route-id="@item.CategoriaId"><i class="fa fa-search"></i></a> |
                <a asp-action="Delete" asp-route-id="@item.CategoriaId"><i class="fa fa-trash"></i></a>
            </td>
        </tr>
}
    </tbody>
</table>
